{
  "title": "Polymer",
  "description": "A polymer material commonly found as a microplastic.",
  "type": "object",
  "required": ["id", "type", "name"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "description": "Unique identifier for the polymer." },
    "type": { "const": "Polymer", "description": "Type tag for the node." },
    "name": { "type": "string", "description": "Name of the polymer (e.g. PET, PP)." },
    "synonyms": { "type": "array", "items": { "type": "string" }, "description": "Alternate names or abbreviations." },
    "CAS_number": { "type": "string", "description": "Chemical Abstracts Service number." },
    "polymer_class": { "type": "string", "description": "Broad polymer category (e.g. polyolefin)." },
    "density_range": {
      "type": "object",
      "description": "Density range for the polymer.",
      "required": ["min", "max", "unit"],
      "properties": {
        "min": { "type": "number", "description": "Minimum density." },
        "max": { "type": "number", "description": "Maximum density." },
        "unit": { "type": "string", "enum": ["g/cm3", "kg/m3"], "description": "Density unit." }
      }
    },
    "typical_additives": { "type": "array", "items": { "type": "string" }, "description": "Common additives in this polymer." },
    "spectral_library_refs": { "type": "array", "items": { "type": "string" }, "description": "References to spectral libraries." },
    "external_refs": { "type": "array", "items": { "type": "string" }, "description": "External database references." },
    "notes": { "type": "string", "description": "Additional free-text notes on polymer." }
  }
}
