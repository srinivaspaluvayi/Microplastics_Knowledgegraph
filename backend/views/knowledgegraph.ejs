<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Knowledge Graph - <%= paper.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/knowledgegraph.css">
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/vis-network@latest/standalone/umd/vis-network.min.js"></script>
</head>
<body>
  <div class="tooltip" id="nodeTooltip"></div>
  <div class="container">
    <div class="header-card">
      <div class="back-link-section">
        <a href="/paper/<%= paperId %>" class="back-link">
          <i class="bi bi-arrow-left"></i> Back to Paper
        </a>
      </div>
      <div class="header-gradient">
        <h1 class="mb-2" style="font-size: 2rem; font-weight: 700;">
          <i class="bi bi-diagram-2"></i> Knowledge Graph
        </h1>
        <p class="mb-0 opacity-90"><%= paper.title %></p>
      </div>
      <div class="card-body p-4">
        <div class="d-flex align-items-center gap-3">
          <span class="badge bg-primary fs-6 px-3 py-2">
            <i class="bi bi-circle-fill"></i> <%= nodes.length %> nodes
          </span>
          <span class="badge bg-info fs-6 px-3 py-2">
            <i class="bi bi-arrow-left-right"></i> <%= edges.length %> relationships
          </span>
        </div>
      </div>
    </div>
    
    <div class="graph-card">
      <div style="position: relative;">
        <div id="graph-container"></div>
        <div class="legend">
          <div class="legend-title">Node Types</div>
          <% if (nodeTypesList && nodeTypesList.length > 0) { %>
            <% nodeTypesList.forEach(nodeType => { %>
              <div class="legend-item">
                <div class="legend-color" style="background-color: <%= typeColors[nodeType] || '#95A5A6' %>;"></div>
                <span title="<%= nodeType %>"><%= nodeType.replace(/([A-Z])/g, ' $1').trim() %></span>
              </div>
            <% }); %>
          <% } else { %>
            <div class="legend-item">
              <span>No node types found</span>
            </div>
          <% } %>
        </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script type="text/javascript">
    // Function to initialize graph
    function initGraph() {
      // Check if vis is loaded
      if (typeof vis === 'undefined') {
        console.error('vis-network library not loaded!');
        const container = document.getElementById('graph-container');
        if (container) {
          container.innerHTML = '<div style="padding: 20px; text-align: center; color: red;">Error: vis-network library failed to load. Please check your internet connection and refresh the page.</div>';
        }
        return;
      }

      // Graph data
      try {
        const nodesData = <%- JSON.stringify(nodes) %>;
        const edgesData = <%- JSON.stringify(edges) %>;
        const nodeDataMap = <%- JSON.stringify(nodeDataMap) %>;

        const nodes = new vis.DataSet(nodesData);
        const edges = new vis.DataSet(edgesData);

        // Container
        const container = document.getElementById('graph-container');
        
        if (!container) {
          console.error('Graph container not found!');
          return;
        }

        // Check if we have data
        if (nodes.length === 0) {
          container.innerHTML = '<div style="padding: 20px; text-align: center; color: #666;">No nodes to display</div>';
          return;
        }

        // Graph configuration - consolidated from constants
        const graphConfig = {
          nodes: {
            shape: 'dot',
            size: 30,
            font: { size: 18, color: '#333', face: 'Arial' },
            borderWidth: 2,
            shadow: true,
            margin: 10
          },
          edges: {
            width: 2.5,
            font: {
              size: 14,
              align: 'middle',
              color: '#333',
              background: 'rgba(255,255,255,0.95)',
              strokeWidth: 4,
              strokeColor: '#fff',
              face: 'Arial'
            },
            smooth: { type: 'cubicBezier', roundness: 0.4 },
            arrows: { to: { enabled: true, scaleFactor: 1.3, type: 'arrow' } },
            color: { color: '#666', highlight: '#0066cc', opacity: 0.8 }
          },
          physics: {
            enabled: true,
            stabilization: { enabled: true, iterations: 250, fit: true, updateInterval: 25 },
            barnesHut: {
              gravitationalConstant: -2000,
              centralGravity: 0.1,
              springLength: 200,
              springConstant: 0.03,
              damping: 0.2,
              avoidOverlap: 1.2
            },
            maxVelocity: 50,
            minVelocity: 0.75,
            solver: 'barnesHut',
            timestep: 0.35
          },
          layout: { improvedLayout: true },
          configure: { enabled: false },
          interaction: {
            hover: true,
            tooltipDelay: 0,
            zoomView: true,
            dragView: true,
            hideEdgesOnDrag: false,
            hideNodesOnDrag: false
          }
        };
        
        const options = graphConfig;

        // Initialize network
        const data = { nodes: nodes, edges: edges };
        const network = new vis.Network(container, data, options);

        // Disable physics after stabilization and fit the network
        network.once("stabilizationEnd", function() {
          // Disable physics so nodes stay in place
          network.setOptions({ physics: { enabled: false } });
          
          network.fit({
            animation: { duration: 500, easingFunction: 'easeInOutQuad' },
            padding: 120,
            minZoomLevel: 0.1,
            maxZoomLevel: 2
          });
        });
        
        // Disable physics when dragging starts
        network.on("dragStart", () => {
          network.setOptions({ physics: { enabled: false } });
        });
        
        // Keep physics disabled after drag ends and check bounds
        network.on("dragEnd", () => {
          network.setOptions({ physics: { enabled: false } });
          
          const bounds = network.getBoundingBox();
          const viewWidth = container.clientWidth;
          const viewHeight = container.clientHeight;
          const padding = 50;
          
          if (bounds.left < -padding || bounds.top < -padding || 
              bounds.right > viewWidth + padding || bounds.bottom > viewHeight + padding) {
            network.fit({ animation: true, duration: 300, padding });
          }
        });

        // Fit on window resize
        let resizeTimeout;
        window.addEventListener('resize', () => {
          clearTimeout(resizeTimeout);
          resizeTimeout = setTimeout(() => {
            network.fit({ animation: false, padding: 120 });
          }, 250);
        });

        // Create tooltip element if it doesn't exist
        let tooltip = document.getElementById('nodeTooltip');
        if (!tooltip) {
          tooltip = document.createElement('div');
          tooltip.id = 'nodeTooltip';
          tooltip.className = 'tooltip';
          document.body.appendChild(tooltip);
        }
        
        // Escape HTML to prevent XSS
        function escapeHtml(text) {
          if (text === null || text === undefined) {
            return String(text);
          }
          const div = document.createElement('div');
          div.textContent = text;
          return div.innerHTML;
        }
        
        // Format node data for display
        function formatNodeData(nodeData) {
          if (!nodeData) return '';
          
          const nodeId = escapeHtml(String(nodeData.id || 'Unknown'));
          let html = `<div class="tooltip-title">${nodeId}</div>`;
          
          // Display all properties including id and type
          const keys = Object.keys(nodeData).sort();
          
          keys.forEach(key => {
            const value = nodeData[key];
            const displayKey = escapeHtml(key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()));
            
            if (Array.isArray(value)) {
              html += `<div class="tooltip-item"><span class="tooltip-label">${displayKey}:</span></div>`;
              if (value.length > 0) {
                html += `<ul class="tooltip-list">`;
                value.forEach(item => {
                  html += `<li class="tooltip-value">${escapeHtml(String(item))}</li>`;
                });
                html += `</ul>`;
              } else {
                html += `<span class="tooltip-value">(empty array)</span>`;
              }
            } else if (typeof value === 'object' && value !== null) {
              html += `<div class="tooltip-item"><span class="tooltip-label">${displayKey}:</span></div>`;
              const objKeys = Object.keys(value);
              if (objKeys.length > 0) {
                html += `<div class="tooltip-object">`;
                objKeys.forEach(subKey => {
                  html += `<div><span class="tooltip-label">${escapeHtml(subKey)}:</span> <span class="tooltip-value">${escapeHtml(String(value[subKey]))}</span></div>`;
                });
                html += `</div>`;
              } else {
                html += `<span class="tooltip-value">(empty object)</span>`;
              }
            } else if (typeof value === 'boolean') {
              html += `<div class="tooltip-item"><span class="tooltip-label">${displayKey}:</span> <span class="tooltip-value">${value ? 'Yes' : 'No'}</span></div>`;
            } else if (value === null) {
              html += `<div class="tooltip-item"><span class="tooltip-label">${displayKey}:</span> <span class="tooltip-value">null</span></div>`;
            } else if (value === undefined) {
              html += `<div class="tooltip-item"><span class="tooltip-label">${displayKey}:</span> <span class="tooltip-value">undefined</span></div>`;
            } else {
              html += `<div class="tooltip-item"><span class="tooltip-label">${displayKey}:</span> <span class="tooltip-value">${escapeHtml(String(value))}</span></div>`;
            }
          });
          
          return html;
        }

        // Track current mouse position globally
        let currentMouseX = 0;
        let currentMouseY = 0;
        let isHovering = false;
        
        // Track mouse movement on the entire document to get accurate position
        document.addEventListener('mousemove', function(e) {
          currentMouseX = e.pageX || e.clientX;
          currentMouseY = e.pageY || e.clientY;
          
          // Update tooltip position if it's visible
          if (tooltip && isHovering && tooltip.style.display === 'block') {
            positionTooltip({
              pageX: currentMouseX,
              pageY: currentMouseY
            });
          }
        });
        
        // Show tooltip on hover
        network.on("hoverNode", function (params) {
          if (!tooltip) {
            console.error('Tooltip element not found');
            return;
          }
          
          isHovering = true;
          const nodeId = params.node;
          const nodeData = nodeDataMap[nodeId];
          
          if (nodeData) {
            tooltip.innerHTML = formatNodeData(nodeData);
          } else {
            // Escape nodeId to prevent XSS
            const safeNodeId = String(nodeId).replace(/[&<>"']/g, m => {
              const map = { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' };
              return map[m];
            });
            tooltip.innerHTML = `<div class="tooltip-title">Node: ${safeNodeId}</div><div class="tooltip-item">No data available</div>`;
          }
          
          // Show tooltip
          tooltip.style.display = 'block';
          tooltip.style.visibility = 'visible';
          tooltip.style.opacity = '1';
          
          // Position tooltip immediately
          setTimeout(function() {
            positionTooltip({
              pageX: currentMouseX || window.innerWidth / 2,
              pageY: currentMouseY || window.innerHeight / 2
            });
          }, 10);
        });

        // Hide tooltip when not hovering
        network.on("blurNode", function (params) {
          isHovering = false;
          if (tooltip) {
            tooltip.style.display = 'none';
            tooltip.style.visibility = 'hidden';
            tooltip.style.opacity = '0';
          }
        });

        // Function to position tooltip within viewport bounds
        function positionTooltip(e) {
          if (!tooltip || tooltip.style.display !== 'block') return;
          
          // Get tooltip dimensions
          const tooltipRect = tooltip.getBoundingClientRect();
          
          const viewportWidth = window.innerWidth;
          const viewportHeight = window.innerHeight;
          const padding = 15;
          const offset = 15;
          
          let left = e.pageX + offset;
          let top = e.pageY + offset;
          
          // Check right boundary - position to the left of cursor if needed
          if (left + tooltipRect.width > viewportWidth - padding) {
            left = e.pageX - tooltipRect.width - offset;
          }
          
          // Check left boundary
          if (left < padding) {
            left = padding;
          }
          
          // Check bottom boundary - position above cursor if needed
          if (top + tooltipRect.height > viewportHeight - padding) {
            top = e.pageY - tooltipRect.height - offset;
          }
          
          // Check top boundary
          if (top < padding) {
            top = padding;
          }
          
          tooltip.style.left = left + 'px';
          tooltip.style.top = top + 'px';
        }


      } catch (error) {
        console.error('Error initializing graph:', error);
        console.error('Error stack:', error.stack);
        const container = document.getElementById('graph-container');
        if (container) {
          container.innerHTML = '<div style="padding: 20px; text-align: center; color: red;">Error initializing graph: ' + error.message + '<br>Check browser console for details.</div>';
        }
      }
    }

    // Try to initialize when script loads
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        // Wait a bit for vis-network to load
        setTimeout(initGraph, 100);
      });
    } else {
      // DOM already loaded, wait for vis-network
      setTimeout(initGraph, 100);
    }

    // Also try on window load as fallback
    window.addEventListener('load', function() {
      if (typeof vis !== 'undefined' && document.getElementById('graph-container').innerHTML === '') {
        initGraph();
      }
    });
  </script>
</body>
</html>

