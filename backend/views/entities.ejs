<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Entities - <%= paper.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/entities.css">
</head>
<body>
  <div class="container">
    <div class="header-card">
      <div class="back-link-section">
        <a href="/paper/<%= paperId %>" class="back-link">
          <i class="bi bi-arrow-left"></i> Back to Paper
        </a>
      </div>
      <div class="header-gradient">
        <h1 class="mb-2" style="font-size: 2rem; font-weight: 700;">
          <i class="bi bi-diagram-3"></i> Entities
        </h1>
        <p class="mb-0 opacity-90"><%= paper.title %></p>
      </div>
      <div class="card-body p-4">
        <span class="badge bg-primary fs-6 px-3 py-2">
          <i class="bi bi-collection"></i> <%= nodes.length %> entity(ies)
        </span>
      </div>
    </div>
    
    <div class="row g-4">
      <% if (nodes.length > 0) { %>
        <% nodes.forEach(node => { %>
          <div class="col-md-6 col-lg-4">
            <div class="entity-card">
              <div class="entity-header">
                <div class="entity-name"><%= node.name || node.label || node.id %></div>
                <% if (node.type) { %>
                  <span class="entity-type-badge"><%= node.type %></span>
                <% } %>
              </div>
              
              <div class="entity-body">
                <% Object.keys(node).forEach(key => { %>
                  <% if (key !== 'name' && key !== 'label' && key !== 'type' && key !== 'id') { %>
                    <div class="feature-item">
                      <div class="feature-label"><%= key.replace(/_/g, ' ') %></div>
                      <div class="feature-value">
                        <% if (Array.isArray(node[key])) { %>
                          <ul>
                            <% node[key].forEach(item => { %>
                              <li><%= item %></li>
                            <% }); %>
                          </ul>
                        <% } else if (typeof node[key] === 'object' && node[key] !== null) { %>
                          <div class="feature-value-object">
                            <% Object.keys(node[key]).forEach(subKey => { %>
                              <div><strong><%= subKey %>:</strong> <%= node[key][subKey] %></div>
                            <% }); %>
                          </div>
                        <% } else if (typeof node[key] === 'boolean') { %>
                          <span class="badge <%= node[key] ? 'bg-success' : 'bg-secondary' %>">
                            <%= node[key] ? 'Yes' : 'No' %>
                          </span>
                        <% } else if (node[key] === null || node[key] === undefined) { %>
                          <span class="text-muted">â€”</span>
                        <% } else { %>
                          <%= node[key] %>
                        <% } %>
                      </div>
                    </div>
                  <% } %>
                <% }); %>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="card">
            <div class="card-body text-center text-muted py-5">
              <i class="bi bi-inbox" style="font-size: 4rem; opacity: 0.3;"></i>
              <p class="mt-3 fs-5">No entities found for this paper.</p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
