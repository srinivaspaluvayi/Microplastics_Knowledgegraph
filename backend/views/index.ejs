<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Microplastics Knowledge Base</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  <div class="container main-container">
    <div class="hero-card">
      <div class="hero-header">
        <h1><i class="bi bi-journal-text"></i> Microplastics Knowledge Base</h1>
        <p class="subtitle">Research Papers & Knowledge Graphs</p>
      </div>
    </div>
    
    <div class="content-card">
      <div class="pagination-section">
        <div class="pagination-controls">
          <div class="d-flex align-items-center gap-3">
            <label for="pageSelect" class="form-label mb-0 fw-semibold">
              <i class="bi bi-list-ol"></i> Page:
            </label>
            <select id="pageSelect" class="form-select" style="width: auto; min-width: 200px;" onchange="window.location.href='/?page=' + this.value">
              <% for (let i = 1; i <= totalPages; i++) { %>
                <% 
                  const startPaper = (i - 1) * papersPerPage + 1;
                  const endPaper = Math.min(i * papersPerPage, totalPapers);
                %>
                <option value="<%= i %>" <%= currentPage === i ? 'selected' : '' %>>
                  Page <%= i %>: <%= startPaper %>-<%= endPaper %>
                </option>
              <% } %>
            </select>
          </div>
        </div>
      </div>
      
      <div class="paper-list">
        <% if (papers.length > 0) { %>
          <% papers.forEach((paper, index) => { %>
            <% const paperNumber = (currentPage - 1) * papersPerPage + index + 1; %>
            <a href="/paper/<%= paper.id %>" class="paper-item">
              <span class="badge bg-primary me-3" style="min-width: 40px; text-align: center;"><%= paperNumber %></span>
              <i class="bi bi-file-earmark-pdf"></i>
              <span class="flex-grow-1"><%= paper.title %></span>
              <i class="bi bi-chevron-right"></i>
            </a>
          <% }); %>
        <% } else { %>
          <div class="text-center text-muted py-5">
            <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
            <p class="mt-3">No papers found for this page.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
